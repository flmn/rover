<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">
    <changeSet author="jitao" id="create table ef_enum">
        <createTable tableName="ef_enum">
            <column name="id" type="varchar(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(500)" defaultValue="">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamptz" defaultValue="now()">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamptz"/>
            <column name="version" type="int" defaultValue="0">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addUniqueConstraint tableName="ef_enum" columnNames="name" constraintName="ef_enum_name_uk"/>
    </changeSet>

    <changeSet author="jitao" id="create table ef_enum_member">
        <createTable tableName="ef_enum_member">
            <column name="id" type="varchar(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="enum_id" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
            <column name="label" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="display_order" type="int" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="is_default" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamptz" defaultValue="now()">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamptz"/>
            <column name="version" type="int" defaultValue="0">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addUniqueConstraint tableName="ef_enum_member" columnNames="enum_id, label"
                             constraintName="ef_enum_member_label_uk"/>
        <addUniqueConstraint tableName="ef_enum_member" columnNames="enum_id, value"
                             constraintName="ef_enum_member_value_uk"/>
    </changeSet>
</databaseChangeLog>