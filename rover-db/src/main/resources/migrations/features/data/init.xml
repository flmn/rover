<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">
    <changeSet author="jitao" id="create table data_airport">
        <createTable tableName="data_airport">
            <column name="id" type="text">
                <constraints nullable="false" primaryKey="true" primaryKeyName="data_airport_pk"/>
            </column>
            <column name="iata_code" type="text" defaultValue="">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="latitude" type="numeric(20,18)">
                <constraints nullable="false"/>
            </column>
            <column name="longitude" type="numeric(21,18)">
                <constraints nullable="false"/>
            </column>
            <column name="country" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamptz" defaultValue="now()">
                <constraints nullable="false"/>
            </column>
            <column name="updated_by" type="text"/>
            <column name="updated_at" type="timestamptz"/>
            <column name="is_deleted" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="deleted_by" type="text"/>
            <column name="deleted_at" type="timestamptz"/>
            <column name="version" type="int" defaultValue="0">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="jitao" id="create table data_runway">
        <createTable tableName="data_runway">
            <column name="airport_id" type="text">
                <constraints nullable="false" primaryKey="true" primaryKeyName="data_runway_pk"/>
            </column>
            <column name="name" type="text">
                <constraints nullable="false" primaryKey="true" primaryKeyName="data_runway_pk"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="data_runway" baseColumnNames="airport_id"
                                 constraintName="data_runway_airport_id_fk" referencedTableName="data_airport"
                                 referencedColumnNames="id" onDelete="CASCADE"/>
    </changeSet>
</databaseChangeLog>